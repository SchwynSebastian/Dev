name: Release from tag

on:
  push:
    tags:
      - '*'

jobs:
  release:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Create release
        uses: ghalactic/github-release-from-tag@v2
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
